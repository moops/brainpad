<div id="search" class="collapse">
    <%= form_tag({:action => 'index'}, :method => 'get', :class => 'form-search') do %>
        <div class="input-append">
            <%= text_field_tag(:q, h(params[:q]), :class => 'input-medium search-query') %>
            <%= submit_tag('search', :class => 'btn') %>
        </div>
    <% end %>
</div>