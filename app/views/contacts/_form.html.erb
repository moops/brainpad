<%= form_for(@contact, remote: true, :html => {:class => 'form-horizontal condensed' }) do |f| %>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3><%= @contact.new_record? ? 'new' : 'update' %>  contact</h3>
    </div>
    <div class="modal-body">
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :city %>
        <%= f.input :tags %>
        <%= tags_field('contact') %>
        <%= f.input :comments %>
        <%= f.input :email %>
        <%= f.input :phone_home %>
        <%= f.input :phone_work %>
    </div>
    <div class="modal-footer">
        <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
<% end %>
