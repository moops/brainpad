<%= simple_form_for(@contact, :remote => true, :html => {:class => 'form-horizontal' }) do |f| %>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>new contact</h3>
    </div>
    <div class="modal-body">
        <%= f.input :person_id, :as => :hidden, :input_html => { :value => current_user.id } %>
        <%= f.input(:name) %>
        <%= f.input(:address) %>
        <%= f.input(:city) %>
        <%= f.input(:tags) %>
        <%= f.input(:comments) %>
        <%= f.input(:email) %>
        <%= f.input(:phone_home) %>
        <%= f.input(:phone_work) %>
    </div>
    <div class="modal-footer">
        <%= f.button(:submit) %>
    </div>
<% end %>
