<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for(@contact, remote: true, html: { class: 'form-horizontal' }) do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h3><%= @contact.new_record? ? 'new' : 'update' %> contact</h3>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="name" class="col-sm-2 control-label">name</label>
          <div class="col-sm-10">
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label for="address" class="col-sm-2 control-label">address</label>
          <div class="col-sm-10">
            <%= f.text_field :address, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label for="city" class="col-sm-2 control-label">city</label>
          <div class="col-sm-10">
            <%= f.text_field :city, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label for="tags" class="col-sm-2 control-label">tags</label>
          <div class="col-sm-6">
            <%= f.text_field :tags, class: 'form-control' %>
          </div>
          <div class="col-sm-4">
            <%= tags_field('contact') %>
          </div>
        </div>
        <div class="form-group">
          <label for="comments" class="col-sm-2 control-label">comments</label>
          <div class="col-sm-10">
            <%= f.text_field :comments, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label for="email" class="col-sm-2 control-label">email</label>
          <div class="col-sm-10">
            <%= f.email_field :email, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label for="phone_home" class="col-sm-2 control-label">home phone</label>
          <div class="col-sm-10">
            <%= f.text_field :phone_home, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label for="phone_work" class="col-sm-2 control-label">work phone</label>
          <div class="col-sm-10">
            <%= f.text_field :phone_work, class: 'form-control' %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.button :submit, class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
