<div id="show" style="display:none;"></div>

<div id="form" style="display:none;"><%= render(:partial => 'form') %></div>

<script type="text/javascript">
  jQuery(document).ready(function() {
    buildFormDialog('contact');
    validate('new_contact');         
  });
</script>

<%= link_to(image_tag('add.png', :size => '15x15', :border => 0), '#', :class => 'show_form') %>

<% if (@contacts and @contacts.size > 0) %>
<table width="100%" cellpadding="2" cellspacing="0" class="searchResult">
    <tr>
        <th>name</th><th>email</th><th>home</th><th>work</th><th>cell</th>
        <th colspan="2">&nbsp;</th></tr>

    <%= render(:partial => 'data_rows', :collection => @contacts) %>
</table>
<%= will_paginate @contacts %>
<% end %>

