<div id="contact_form" style="display:none;"><%= render(:partial => 'form') %></div>

<script>
  jQuery(document).ready(function() { 

    var contactForm = jQuery('#contact_form').dialog({ autoOpen: false, width: 500, title: 'contact form', modal: true, show: 'fade' });
    ajaxLinks();         
    jQuery('.show_contact_form').click(function() {
      contactForm.dialog('open');
      return false;
    });
  });
</script>

<%= link_to(image_tag('add.png', :size => '15x15', :border => 0), '#', :class => 'show_contact_form') %>

<% if (@contacts and @contacts.size > 0) %>
<table width="100% cellpadding="2" cellspacing="0" class="searchResult">
    <tr>
        <th>name</th><th>email</th><th>home</th><th>work</th><th>cell</th>
        <th colspan="3">&nbsp;</th></tr>

    <%= render(:partial => 'data_rows', :collection => @contacts) %>
</table>
<%= will_paginate @contacts %>
<% end %>

