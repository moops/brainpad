$('#workout_form').html("<%= escape_javascript(render(partial: 'form')) %>").modal('show');

var workoutOnCalendar = $('#workout_workout_on').flatpickr({ allowInput: true, enableTime: true });
$('#workout_form').on('blur', '#workout_workout_on', function() {
  window.setTimeout(function() { workoutOnCalendar.close(); }, 250);
});
