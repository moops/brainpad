<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>workout details</h3>
</div>
<div class="modal-body">
    <table class="table table-condensed data-display">
        <tbody>
            <tr>
                <td class="display-label">date</td><td><%= @workout.workout_on.strftime("%a %b %d, %y") %></td></tr>
            <tr>
                <td class="display-label">tags</td><td><%= @workout.tags %></td></tr>
            <tr>
                <td class="display-label">location</td><td><%= @workout.location %></td></tr>
            <tr>
                <td class="display-label">description</td><td><%= @workout.description %></td></tr>
            <tr>
                <td class="display-label">duration</td><td><%= @workout.duration %></td></tr>
            <tr>
                <td class="display-label">distance</td><td><%= @workout.distance %></td></tr>
        <tbody>
    </table>
</div>