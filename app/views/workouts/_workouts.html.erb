<% if (@workouts and !@workouts.empty?) %>
  <span class="list-title">workouts</span>
  <%= filters_links %>
  <table class="table table-condensed table-hover">
    <thead>
      <tr><th>date</th><th>type</th><th>location</th><th>km</th><th>min</th><th>actions</th></tr>
    </thead>
    <tbody>
      <% @workouts.each do |workout| %>
        <tr>
          <td><%= link_to(workout.workout_on.strftime("%a %b %d, %y"), edit_workout_path(workout), remote: true) %></td>
          <td><%= workout.tags %></td>
          <td>
            <% if workout.route %>
              <a href="http://www.gmap-pedometer.com/?r=<%= workout.route.code %>" target="_blank">
                <%= workout.location %>
              </a>
            <% else %>
              <%= workout.location %>
            <% end %></td>
          <td><%= workout.distance %></td>
          <td><%= workout.duration %></td>
          <td class="actions text-nowrap">
            <%= render partial: 'shared/action_links', locals: { path: workout_path(workout), copy_path: new_workout_path(workout_id: workout), label: workout.location } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @workouts %>
<% end %>