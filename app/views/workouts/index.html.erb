<div id="workout_form" style="display:none;"><%= render(:partial => 'form') %></div>

<script>
  jQuery(document).ready(function() { 

    var workoutForm = jQuery('#workout_form').dialog({ autoOpen: false, width: 600, title: 'workout form', modal: true, show: 'fade' });
    ajaxLinks();         
    jQuery('.show_workout_form').click(function() {
      workoutForm.dialog('open');
      return false;
    });
  });
</script>

<%= link_to(image_tag('add.png', :size => '15x15', :border => 0), '#', :class => 'show_workout_form') %>

<% if (@workouts and @workouts.size > 0) %>
<table width="100% cellpadding="2" cellspacing="0" class="searchResult">
    <tr>
        <th>date</th>
        <th>type</th>
        <th>location</th>
        <th>distance</th>
        <th>duration</th>
        <th colspan="3">&nbsp;</th></tr>
    
    <%= render(:partial => 'data_rows', :collection => @workouts) %>
</table>
<% end %>

<%= will_paginate @workouts %>

