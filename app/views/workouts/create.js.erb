<% if @workout.valid? %>
	$('#workout-form').modal('hide');
	$('#workout-list').html("<%= escape_javascript(render(:partial => 'workouts')) %>");
<% else %>
	$('#workout-form').html("<%= escape_javascript(render(:partial => 'form')) %>").modal('show');
	$('#workout_workout_on').datepicker();
<% end %>