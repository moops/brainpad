<%= form_for(@link, html: { class: 'form-horizontal' } ) do |f| %>
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">name</label>
    <div class="col-sm-4">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <label for="clicks" class="col-sm-2 control-label">clicks</label>
    <div class="col-sm-4">
      <%= f.text_field :clicks, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label for="url" class="col-sm-2 control-label">url</label>
    <div class="col-sm-10">
      <%= f.text_field :url, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label for="tags" class="col-sm-2 control-label">tags</label>
    <div class="col-sm-6">
      <%= f.text_field :tags, class: 'form-control' %>
    </div>
    <div class="col-sm-4">
      <%= tags_field('link') %>
    </div>
  </div>
  <div class="form-group">
    <label for="expires_on" class="col-sm-2 control-label">expires</label>
    <div class="col-sm-4">
      <%= f.text_field :expires_on, class: 'form-control date-picker' %>
    </div>
    <label for="last_clicked_on" class="col-sm-2 control-label">last clicked</label>
    <div class="col-sm-4">
      <%= f.text_field :last_clicked_on, class: 'form-control datetime-picker' %>
    </div>
  </div>
  <div class="form-group">
    <label for="comments" class="col-sm-2 control-label">comments</label>
    <div class="col-sm-10">
      <%= f.text_area :comments, rows: 2, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
