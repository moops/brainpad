<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for(@journal, remote: true, html: { class: 'form-horizontal' }) do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h3><%= @journal.new_record? ? 'new' : 'update' %> journal</h3>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="journal_entry" class="col-sm-2 control-label">entry</label>
          <div class="col-sm-10">
            <%= f.text_area :entry, rows: 4, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label for="journal_type_id" class="col-sm-2 control-label">type</label>
          <div class="col-sm-4">
          <%= f.collection_select(:journal_type_id, @types, :id, :description, { }, class: 'form-control') %>
          </div>
          <label for="entry_on" class="col-sm-2 control-label">when</label>
          <div class="col-sm-4">
            <%= f.text_field :entry_on, class: 'form-control date-picker' %>
          </div>
        </div>
        <div class="form-group">
          <label for="tags" class="col-sm-2 control-label">tags</label>
          <div class="col-sm-6">
            <%= f.text_field :tags, class: 'form-control' %>
          </div>
          <div class="col-sm-4">
            <%= tags_field('journal') %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <a class="btn btn-link" data-dismiss="modal">cancel</a>
        <%= f.button :submit, class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
