$('#journal_form').html("<%= escape_javascript(render(partial: 'form')) %>").modal('show');

var entryOnCalendar = $('#journal_entry_on').flatpickr({ allowInput: true });
$('#journal_form').on('blur', '#journal_entry_on', function() {
  window.setTimeout(function() { entryOnCalendar.close(); }, 250);
});
