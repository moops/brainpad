<% if @journal.valid? %>
  $('#modal-dialog').modal('hide');
  $('#journal-list').html("<%= escape_javascript(render(partial: 'journals')) %>");
  addMessage('success', '<%= flash[:notice] %>');
  <% flash.discard(:notice) %>
<% else %>
  $('#modal-dialog').html("<%= escape_javascript(render(partial: 'form')) %>").modal('show');
<% end %>