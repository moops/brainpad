<tr class="<%= data_rows_counter.modulo(2).nonzero? ? "dataOn" : "dataOff" %>">
    <td><a href="<%= data_rows['url'] %>"><%= data_rows['name'] %></a></td>
    <td><%= data_rows['username'] %></td>
    <td><%= data_rows['password'] %></td>
    <td><%= data_rows['url'] %></td>
    <td><%= link_to(image_tag('detail.png', :size => '15x15', :border => 0), connection_path(data_rows), {:target => 'detail', :onClick => "openWindow(500,500,'detail');"}) %></td>
    <td><%= link_to_remote(image_tag('edit.png', :size => '15x15', :border => 0), :update => 'form', :method => :get, :url => edit_connection_path(data_rows)) %></td>
    <td><%= link_to(image_tag('delete.png', :size => '15x15', :border => 0), 
                    connection_path(data_rows), :method => 'delete',
                    :confirm => "really delete connection?") %></td></tr>
