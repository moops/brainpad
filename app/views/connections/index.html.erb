<div id="show" style="display:none;"></div>

<div id="connection_form" style="display:none;"><%= render(:partial => 'form') %></div>

<script type="text/javascript">
  jQuery(document).ready(function() {
    buildFormDialog('connection');
    validate('new_connection'); 
  });
</script>

<% if (@connections and @connections.size > 0) %>
<div id="primary_panel_full">
	<div class="box">
	    <div class="box_header">
	        connections
	        <span style="float:right">
	            <%= link_to(image_tag('add.png', :size => '15x15', :border => 0), '#', :class => 'show_connection_form') %>
	        </span>
	    </div>
	    <div class="box_content">
		    <table width="100%" cellpadding="2" cellspacing="0" class="searchResult">
		        <tr>
		            <th>name</th>
			        <th>username</th>
			        <th>password</th>
			        <th>url</th>
			        <th colspan="2">&nbsp;</th></tr>
		        
		        <%= render(:partial => 'data_rows', :collection => @connections) %>
		    </table>
		    <%= will_paginate @connections %>
			<%= @connections.total_entries %> connections
	    </div>
	</div> <!-- end connections -->
</div> <!-- end primary_panel_full -->
<% end %>

<div class="clear"/>