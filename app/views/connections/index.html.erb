<div id="connection_form" style="display:none;"><%= render(:partial => 'form') %></div>

<script>
  jQuery(document).ready(function() { 

    var connectionForm = jQuery('#connection_form').dialog({ autoOpen: false, width: 500, title: 'connection form', modal: true, show: 'fade' });
    ajaxLinks();         
    jQuery('.show_connection_form').click(function() {
      connectionForm.dialog('open');
      return false;
    });
  });
</script>

<%= link_to(image_tag('add.png', :size => '15x15', :border => 0), '#', :class => 'show_connection_form') %>

<% if (@connections and @connections.size > 0) %>
<table width="100% cellpadding="2" cellspacing="0" class="searchResult">
    <tr>
        <th>name</th>
        <th>username</th>
        <th>password</th>
        <th>url</th>
        <th colspan="3">&nbsp;</th></tr>

    <%= render(:partial => 'data_rows',:collection => @connections) %>
</table>

<%= will_paginate @connections %>
<% end %>