<%= filters_links %>
<table class="table table-sm table-hover">
    <thead>
        <tr><th>name</th><th>username</th><th>password</th><th>url</th><th>actions</th></tr>
    </thead>
    <tbody>
        <% @connections.each do |connection| %>
        <tr>
            <td>
                <%= link_to(connection.name, edit_connection_path(connection), remote: true, class: 'tip', data: { toggle: 'tooltip' }, title: "edit #{connection.name}") %>
            </td>
            <td><%= connection.username %></td>
            <td><%= connection.password %></td>
            <td><%= link_to connection.url, connection.url %></td>
            <td class="actions text-nowrap">
                <%= render partial: 'shared/action_links', locals: { path: connection_path(connection), copy_path: new_connection_path(connection_id: connection), label: connection.name, allow_delete: true } %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
<%= paginate @connections %>
