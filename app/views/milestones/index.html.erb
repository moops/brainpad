<!-- hidden elements -->
<div id="milestone-form" class="modal hide fade"></div>

<!-- search form -->
<%= render 'shared/search_form' %>

<div class="pull-right">
    <%= link_to(new_milestone_path, remote: true, :class => "btn btn-primary") do %>
        <i class="icon-plus icon-white"></i> add
    <% end %>
    <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#search-container">
        <i class="icon-search icon-white"></i> find
    </button>
</div>

<div id="milestone-list" class="data-list">
    <%= render(:partial => 'milestones') %>
</div>

<div class="clear"></div>