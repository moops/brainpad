<div id="form" class="form">
<h3><%= @form_header %></h3>
<% form_tag(:action => @form_action) do %>
<%= render(:partial => 'form') %>
<% end %>
</div>

<% @milestones.each do |milestone| %>

<table>
  <tr>
    <td><%=link_to_remote(milestone.name, :update => 'form', :method => :get, :url => edit_milestone_path(milestone)) %></td>
    <td><input type="text" class="milestone_time" id="<%= milestone.id %>"/></td>

    <td><%= link_to 'Show', milestone %></td>
    <td><%= link_to 'Edit', edit_milestone_path(milestone) %></td>
    <td><%= link_to 'Destroy', milestone, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
</table>

<script type="text/javascript">
  count('<%= milestone.id %>', '<%= milestone.milestone_at %>');
</script>
  
<% end %>
