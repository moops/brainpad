<% if (@reminders and @reminders.size > 0) %>
<% form_tag(:action => 'finish') do %>
<table width="100% cellpadding="2" cellspacing="0" class="searchResult">
    <tr>
        <th>date</th>
        <th>type</th>
        <th>priority</th>
        <th>description</th>
        <th>done</th>
        <th colspan="3">&nbsp;</th></tr>

    <%= render(:partial => 'data_rows', :collection => @reminders) %>
    <tr>
        <td colspan="4"><%= will_paginate @reminders %></td>
        <td><%= submit_tag('>>') %></td>
        <td colspan="3">&nbsp;</td></tr>
</table>
<% end %>
<% end %>

<p>
<h3 class="formHeader"><%= @form_header %></h3>
<div id="form" class="form">
	<%= render(:partial => 'form') %>
</div>