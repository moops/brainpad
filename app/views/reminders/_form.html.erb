<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for(@reminder, html: { class: 'form-horizontal' }) do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h3><%= @reminder.new_record? ? 'new' : 'update' %> reminder</h3>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="description" class="col-sm-2 control-label">description</label>
          <div class="col-sm-10">
            <%= f.text_area :description, rows: 3, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label for="reminder_type_id" class="col-sm-2 control-label">type</label>
          <div class="col-sm-4">
            <%= f.collection_select(:reminder_type_id, @types, :id, :description, { prompt: true }, class: 'form-control') %>
          </div>
          <label for="priority_id" class="col-sm-2 control-label">priority</label>
          <div class="col-sm-4">
            <%= f.collection_select(:priority_id, @priorities, :id, :description, { prompt: true }, class: 'form-control') %>
          </div>
        </div>
        <div class="form-group">
          <label for="due_at" class="col-sm-2 control-label">due</label>
          <div class="col-sm-4">
            <%= f.text_field :due_at, class: 'form-control' %>
          </div>
          <label for="email" class="col-sm-2 control-label">done</label>
          <div class="col-sm-1">
            <%= f.check_box :done, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label for="tags" class="col-sm-2 control-label">tags</label>
          <div class="col-sm-6">
            <%= f.text_field :tags, class: 'form-control' %>
          </div>
          <div class="col-sm-4">
            <%= tags_field('reminder', 'reminder_description') %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <a class="btn btn-link" data-dismiss="modal">cancel</a>
        <%= f.button :submit, class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
