<h1>New person</h1>

<% form_for(@person) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :user_name %><br />
    <%= f.text_field :user_name %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.text_field :password %>
  </p>
  <p>
    <%= f.label :mail_url %><br />
    <%= f.text_field :mail_url %>
  </p>
  <p>
    <%= f.label :banking_url %><br />
    <%= f.text_field :banking_url %>
  </p>
  <p>
    <%= f.label :map_center %><br />
    <%= f.text_field :map_center %>
  </p>
  <p>
    <%= f.label :authority %><br />
    <%= f.text_field :authority %>
  </p>
  <p>
    <%= f.label :birth_on %><br />
    <%= f.date_select :birth_on %>
  </p>
  <p>
    <%= f.label :last_login_on %><br />
    <%= f.datetime_select :last_login_on %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', people_path %>