<%= simple_form_for(@person, :html => {:class => 'form-horizontal' }) do |f| %>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3><%= @person.valid? ? 'update profile' : 'sign up' %></h3>
    </div>
    <div class="modal-body">
        <%= f.input :roles, :as => :hidden, :input_html => { :value => '[user]' } %>
        <%= f.input :username %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
        <%= f.input(:born_on, as: :string, label: 'Birth Date', input_html: {class: 'calendar', 'data-date-format' => "yyyy-mm-dd"}) %>
        <%= f.input :email %>
        <%= f.input :phone %>
    </div>
    <div class="modal-footer">
        <%= f.button :submit, @person.valid? ? 'update' : 'sign up', :class => 'btn btn-primary'%>
    </div>
<% end %>