<%= form_with(model: @person, local: true) do |f| %>
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><%= @person.new_record? ? 'sign up' : 'update profile' %> </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="form-group row">
                        <%= f.label(:username, class: 'col-sm-2 col-form-label text-right') %>
                        <div class="col-sm-4">
                            <%= f.text_field(:username, class: 'form-control focus') %>
                        </div>
                        <%= f.label(:email, class: 'col-sm-2 col-form-label text-right') %>
                        <div class="col-sm-4">
                            <%= f.text_field(:email, class: 'form-control') %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <%= f.label(:password, class: 'col-sm-2 col-form-label text-right') %>
                        <div class="col-sm-4">
                            <%= f.password_field(:password, class: 'form-control') %>
                        </div>
                        <%= f.label(:password_confirmation, 'Confirm', class: 'col-sm-2 col-form-label text-right') %>
                        <div class="col-sm-4">
                            <%= f.password_field(:password_confirmation, class: 'form-control') %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <%= f.label(:born_on, 'Birth Date', class: 'col-sm-2 col-form-label text-right') %>
                        <div class="col-sm-4 pr-0">
                            <%= f.text_field(:born_on, class: 'form-control') %>
                        </div>
                        <%= f.label(:phone, class: 'col-sm-2 col-form-label text-right') %>
                        <div class="col-sm-4">
                            <%= f.text_field(:phone, class: 'form-control') %>
                        </div>
                    </div>
                    <div class="form-group row text-right">
                        <div class="col">
                            <%= link_to('cancel', '#', data: { dismiss: 'modal' }) %>
                            <%= f.submit class: 'btn btn-primary' %>
                        </div>
                    </div>
                </div>
            </div> <!-- end .modal-body -->
        </div> <!-- end .modal-content -->
    </div> <!-- end .modal-dialog -->
<% end %>
