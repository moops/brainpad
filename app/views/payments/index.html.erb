<% if @money_summary %>
    <div id="money_summary" class="shaded_box">
        <table width="100%" border="0">
            <tr>
                <td>last 30 days:</td>
                <td><div class="summary_data"><%= number_to_currency @money_summary.per_expense %></div>per expense</td>
                <td><div class="summary_data"><%= number_to_currency @money_summary.per_day %></div>per day</td>
                <td><div class="summary_data"><%= @money_summary.buy_nothing_days %></div>buy nothing days</td>
                <td><div class="summary_data"><%= number_to_currency @money_summary.balance %></div>net worth</td></tr>
        </table>
    </div>
<% end %>

    <div id="money_payment_form">
        <% action = @payment.id ? 'update' : 'create' %>
        <% form_tag(:action => action) do %>
        <%= render(:partial => 'form') %>
        <% end %>
    </div> <!-- end money_payment_form -->
    
    <div id="money_left">
        <div id="money_accounts" class="box">
            <div class="box_header">accounts</div>
            <div class="box_content">
                <table width="100%" border="0" cellspacing="0" cellpadding="2">
                <%= render :partial => 'account/account', :collection => @accounts %>
                </table>
            </div>
            <div class="box_buttons">
                <%= link_to('new account', :controller => 'account', :action => 'new' ) %>
            </div>
        </div> <!-- end money_accounts -->
        <%= render :partial => 'expenses_by_tag' %>
    </div> <!-- end money_left -->
    
    <div id="money_payments" class="box">
        <div class="box_header">transactions</div>
        <div class="box_content">
            <table width="100%" border="0" cellspacing="0" cellpadding="2">
            <%= render :partial => 'payment', :collection => @payments %>
            </table>
        </div>
    </div> <!-- end money_payments -->
    
    <div class="clear">&nbsp;</div>