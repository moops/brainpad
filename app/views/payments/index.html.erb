<!-- hidden elements -->
<div id="account-form" class="modal hide fade"></div>
<div id="payment-form" class="modal hide fade"></div>

<% if @money_summary %>
    <div class="payment-dashboard">
        <div class="item">last 30 days:</div>
        <div class="item"><div class="data"><%= number_to_currency @money_summary[:net_change] %></div>net change</div>
        <div class="item"><div class="data"><%= number_to_currency @money_summary[:per_day] %></div>per day</div>
        <div class="item"><div class="data"><%= @money_summary[:buy_nothing_days] %></div>buy nothing days</div>
        <div class="item"><div class="data"><%= number_to_currency @money_summary[:balance] %></div>net worth</div>
        <div class="clear"></div>
    </div> <!-- end .dashboard -->
<% end %>

<div class="payments-panel">
    <div class="reports-panel" id="accounts">
	    <%= render 'accounts' %>
    </div>
    <div class="reports-panel" id="expenses_by_tag">
        <%= render 'expenses_by_tag' %>
    </div>
    <div class="list-panel">
        <!-- search form -->
        <%= render 'shared/search_form' %>
       
        <!-- add and search buttons --> 
        <div class="pull-right">
            <%= link_to(new_payment_path, :remote => true, :class => "btn btn-primary") do %>
                <i class="icon-plus icon-white"></i> add
            <% end %>
            <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#search">
                <i class="icon-search icon-white"></i> find
            </button>
        </div>
        <div id="future-payment-list">
            <%= render partial: 'upcoming' %>
        </div>
        <div id="payment-list">
            <%= render partial: 'payments' %>
        </div>
    </div>
    <div class="clear"></div>
</div> <!-- end .payments-panel -->