<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for(@payment, html: { class: 'form-horizontal' }) do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h3><%= @payment.new_record? ? 'new' : 'update' %> payment</h3>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="payment_on" class="col-sm-2 control-label">date</label>
          <div class="col-sm-4">
            <%= f.text_field :payment_on, class: 'form-control date-picker-today' %>
          </div>
          <label for="amount" class="col-sm-2 control-label">amount</label>
          <div class="col-sm-4">
            <%= f.text_field :amount, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label for="from_account" class="col-sm-2 control-label">from</label>
          <div class="col-sm-4">
            <%= f.collection_select(:from_account, @accounts, :id, :name, { include_blank: true }, class: 'form-control') %>
          </div>
          <label for="to_account" class="col-sm-2 control-label">to</label>
          <div class="col-sm-4">
            <%= f.collection_select(:to_account, @accounts, :id, :name, { include_blank: true }, class: 'form-control') %>
          </div>
        </div>
        <div class="form-group">
          <label for="description" class="col-sm-2 control-label">description</label>
          <div class="col-sm-10">
            <%= f.text_field :description, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label for="tags" class="col-sm-2 control-label">tags</label>
          <div class="col-sm-6">
            <%= f.text_field :tags, class: 'form-control' %>
          </div>
          <div class="col-sm-4">
            <%= tags_field('payment', 'payment_description') %>
          </div>
        </div>

        <fieldset>
          <legend>schedule</legend>
          <div class="form-group">
            <label for="frequency" class="col-sm-2 control-label">frequency</label>
            <div class="col-sm-4">
              <%= f.collection_select(:frequency, @frequencies, :id, :description, { include_blank: true }, class: 'form-control') %>
            </div>
            <label for="until" class="col-sm-2 control-label">until</label>
            <div class="col-sm-4">
              <%= f.text_field :until, class: 'form-control date-picker' %>
            </div>
          </div>
        </fieldset>
      </div>
      <div class="modal-footer">
        <a class="btn btn-link" data-dismiss="modal">cancel</a>
        <%= f.button :submit, class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

