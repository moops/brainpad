<% if @upcoming_payments and !@upcoming_payments.empty? %>
    <div class="box">
        <div class="boxhead">upcoming</div>
        <div class="boxcontent">
            <table class="table table-condensed table-hover">
                <tbody>
                    <% @upcoming_payments.each do |payment| %>
                        <tr>
                            <td><%= payment.description_condensed %></td>
                            <td><div class="<%= "#{payment.type}-amount" %>"><%= number_to_currency payment.amount %></div></td>
                            <td><%= payment.account_name %></td>
                            <td>in <%= (payment.next_due - Date.today).to_i %> days</td></tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div> <!-- end .box -->
<% end %>