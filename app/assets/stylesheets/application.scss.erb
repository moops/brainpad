@import "bootstrap";
@import "flatpickr";
@import "workouts";
@import "reminders";
@import "payments";

body {
  background-image: url(<%= asset_path('grgrad.gif') %>) repeat-x;
}

/*
 ************************************************
 nav bar
 ************************************************
 */
ul, li {
  margin: 0; padding: 0;
}

#blob {
  //border-right: 1px solid #0059ec;
  //border-left: 1px solid #0059ec;
  position: absolute;
  top: 0;
  z-index : 1;
 /*
  background: #0b2b61;
  background: -moz-linear-gradient(top, #0b2b61, #1153c0);
  background: -webkit-gradient(linear, left top, left bottom, from(#0b2b61), to(#1153c0));
  background: -moz-linear-gradient(top, #0b2b61, #1153c0);
  background: -webkit-gradient(linear, left top, left bottom, from(#0b2b61), to(#1153c0));
  -moz-border-radius: 8px;
  -webkit-border-radius: 8px;
  -moz-box-shadow: 2px 3px 10px #011331;
  -webkit-box-shadow: 2px 3px 10px #011331;
  */
  background: #ff9933;
  background: -webkit-gradient(linear, left top, right bottom, color-stop(40%,#f45d00), color-stop(100%,#ff9933));
  background: -webkit-linear-gradient(-45deg, #f45d00 40%, #ff9933 100%);
  background: -moz-linear-gradient(-45deg, #f45d00 40%, #ff9933 100%);
  background: -o-linear-gradient(-45deg, #f45d00 40%, #ff9933 100%);
  border-radius: 6px;
  box-shadow: 3px 3px 6px rgba(0,0,0,0.3);
}

#nav {
  position: relative;
  background: #333;
  float: left;
}

#nav li {
  float: left;
  list-style: none;
  border-right: 1px solid #4a4a4a;
  border-left: 1px solid black;
}

#nav li a {
  color: #e3e3e3;
  position: relative;
  z-index: 2;
  float: left;
  text-decoration: none;
  padding: 10px 15px;
}

/*
 ************************************************
 bootstrap fixes
 ************************************************
 */
div.modal form {
  margin-bottom: 0px;
}

// bootstrap datepicker dropdown fix for appearing in modal divs
div.datepicker.dropdown-menu {
  z-index: 1051;
}

// input hover background for milestone time
.table-hover tbody tr:hover input {
  background-color: whitesmoke;
}

.form-group {
  margin-bottom: 8px;
}

/*
 ************************************************
 containers
 ************************************************
 */
#container {
  margin: auto;
  width: 920px;
}

#nav {
  margin: auto;
  width:100%;
  margin-bottom: 20px;
}

.data-list {
  margin-top: 20px;
}

/*
 ************************************************
 boxes
 ************************************************
 */
.box {
  border: 1px solid #f93;
  border-radius: 6px;
  box-shadow: 3px 3px 6px rgba(0,0,0,0.3);
  margin-bottom: 20px;
}

.boxhead {
  border-bottom: 1px solid #bbb;
  background-color: #ddd;
  font-weight: bold;
  padding: 5px 5px 5px 35px;
  border-radius: 6px 6px 0px 0px;
}

.boxcontent {
  padding: 10px;
}

/*
 ************************************************
 table data actions
 ************************************************
 */
td.actions {
  width: 80px;
}

td.actions i {
  opacity: 0.4;
  padding-left: 8px;
}

td.actions i:hover {
  opacity: 1.0;
  padding-left: 8px;
}

table.data-display td {
  border-top: 0;
}

.display-label {
  text-align: right;
  font-weight: bold;
}

/*
 ************************************************
 forms
 ************************************************
 */
form.condensed .control-group {
  margin-bottom: 6px;
}

form.condensed legend {
  margin-bottom: 0px;
  line-height: 25px;
}

label.required:after {
  color: red;
	font-weight: bold;
	font-size: 1.5em;
	line-height: 50%;
	content: " *";
	vertical-align: bottom;
}

/*
 ************************************************
 other
 ************************************************
 */
div.alert strong {
  font-weight: bold;
}

input.milestone-time {
  border: 0px;
}

img.bar {
	height: 15px;
}

.clear {
  clear: both;
}

.filter {
  background-color: #EEEEEE;
  border: 1px solid #AAAAAA;
  border-radius: 5px 5px 5px 5px;
  font-size: 12px;
  margin-bottom: 10px;
  margin-right: 5px;
  padding: 2px 8px;
}

span.list-title {
  display: inline;
  margin-right: 0.5em;
  font-size: 1.5em;
  font-weight: bold;
}

.links-list {
  list-style-position: inside;
}

.horizontal-links-list {
  background: pink;
}

.horizontal-links-list li {
  display: inline;
  margin-right: 0.5em;
}

.horizontal-links-list li:before {
  content: '\2022';
  margin-right: 0.5em;
}

/*
 ************************************************
 footer
 ************************************************
 */
html {
  position: relative;
  min-height: 100%;
}

body {
  /* make room for footer height */
  margin-bottom: 80px;
}

footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 80px;
}

.footer-content {
  width: 920px;
  margin-left: auto;
  margin-right: auto;
  font-size: .9em;
  padding: 5px;
  border: 1px solid #bbb;
  border-radius: 6px;
  box-shadow: 3px 3px 6px rgba(0,0,0,0.3);
}

.footer-links {
  padding-bottom: 8px;
}
