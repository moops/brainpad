@import "bootstrap";
@import "flatpickr";
@import "workouts";
@import "reminders";
@import "payments";
@import "foobar";

body {
  background-image: url(<%= asset_path('grgrad.gif') %>) repeat-x;
}

/*
 ************************************************
 nav bar
 ************************************************
 */
ul, li {
  margin: 0; padding: 0;
}

#blob {
  //border-right: 1px solid #0059ec;
  //border-left: 1px solid #0059ec;
  position: absolute;
  top: 0;
  z-index : 1;
 /*
  background: #0b2b61;
  background: -moz-linear-gradient(top, #0b2b61, #1153c0);
  background: -webkit-gradient(linear, left top, left bottom, from(#0b2b61), to(#1153c0));
  background: -moz-linear-gradient(top, #0b2b61, #1153c0);
  background: -webkit-gradient(linear, left top, left bottom, from(#0b2b61), to(#1153c0));
  -moz-border-radius: 8px;
  -webkit-border-radius: 8px;
  -moz-box-shadow: 2px 3px 10px #011331;
  -webkit-box-shadow: 2px 3px 10px #011331;
  */
  background: #ff9933;
  background: -webkit-gradient(linear, left top, right bottom, color-stop(40%,#f45d00), color-stop(100%,#ff9933));
  background: -webkit-linear-gradient(-45deg, #f45d00 40%, #ff9933 100%);
  background: -moz-linear-gradient(-45deg, #f45d00 40%, #ff9933 100%);
  background: -o-linear-gradient(-45deg, #f45d00 40%, #ff9933 100%);
  border-radius: 6px;
  box-shadow: 3px 3px 6px rgba(0,0,0,0.3);
}

#nav {
  position: relative;
  background: #333;
  float: left;
}

#nav li {
  float: left;
  list-style: none;
  border-right: 1px solid #4a4a4a;
  border-left: 1px solid black;
}

#nav li a {
  color: #e3e3e3;
  position: relative;
  z-index: 2;
  float: left;
  text-decoration: none;
  padding: 10px 15px;
}

/*
 ************************************************
 bootstrap fixes
 ************************************************
 */
div.modal form {
  margin-bottom: 0px;
}

// bootstrap datepicker dropdown fix for appearing in modal divs
div.datepicker.dropdown-menu {
  z-index: 1051;
}

// input hover background for milestone time
.table-hover tbody tr:hover input {
  background-color: whitesmoke;
}

.form-group {
  margin-bottom: 0.5rem;
}

.container-fluid, .col-12 {
  padding-left: 0px;
  padding-right: 0px;
}

.last-col {
  padding-right: 0px;
}

.first-col {
  padding-left: 0px
}

.row {
  margin-right: 0px;
  margin-left: 0px;
}

.card {
  box-shadow: 3px 3px 6px rgba(0,0,0,0.3);
}

/*
 ************************************************
 containers
 ************************************************
 */
#content {
  margin: auto;
  width: 920px;
}

#nav {
  margin: auto;
  width:100%;
  margin-bottom: 20px;
}

.data-list {
  margin-top: 20px;
}

footer {
  margin-top: 1em;
  margin-bottom: 1em;
  font-size: .9em;
  padding: 1.2em;
  border: 1px solid #bbb;
  border-radius: 4px;
  box-shadow: 3px 3px 6px rgba(0,0,0,0.3);
  text-align: center;
}

/*
 ************************************************
 boxes
 ************************************************
 */
.card-body {
  padding: 0.25rem;
}

.card-body .container-fluid {
  padding-right: 0px;
  padding-left: 0px;
}

/*
 ************************************************
 table data actions
 ************************************************
 */
td.actions {
  width: 80px;
}

td.actions i {
  opacity: 0.4;
  padding-left: 8px;
}

td.actions i:hover {
  opacity: 1.0;
  padding-left: 8px;
}

table.data-display td {
  border-top: 0;
}

.display-label {
  text-align: right;
  font-weight: bold;
}

/*
 ************************************************
 forms
 ************************************************
 */
form.condensed .control-group {
  margin-bottom: 6px;
}

form.condensed legend {
  margin-bottom: 0px;
  line-height: 25px;
}

label.required:after {
  color: red;
	font-weight: bold;
	font-size: 1.5em;
	line-height: 50%;
	content: " *";
	vertical-align: bottom;
}

/*
 ************************************************
 other
 ************************************************
 */
div.alert strong {
  font-weight: bold;
}

input.milestone-time {
  border: 0px;
}

img.bar {
	height: 15px;
}

.clear {
  clear: both;
}

.filter {
  background-color: #eee;
  border: 1px solid #aaa;
  border-radius: 4px;
  font-size: 12px;
  margin-bottom: 10px;
  margin-right: 5px;
  padding: 2px 8px;
}

.list-title {
  font-size: 1.5em;
  font-weight: bold;
}

.links-list {
  list-style-position: inside;
}

.horizontal-links-list li {
  display: inline;
  margin-right: 0.5em;
}

.horizontal-links-list li:before {
  content: '\2022';
  margin-right: 0.5em;
}

/*
 ************************************************
  icon links
 ************************************************
 */
 a:link [class^="icon-"], a:visited [class^="icon-"], a:hover, a:active [class^="icon-"] {
  text-decoration: none;
  color: #333;
}
